<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="#222222"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:paddingLeft="12dp"
                android:layout_marginRight="1dp"
                android:text="@string/app_name"
                android:background="#CE474444"
                android:textColor="@color/text_color"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/Name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="Name"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/DOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="16dp"
                android:text="Age"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="16dp"
                android:text="E-mail ID"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="16dp"
                android:text="Mobile No"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="16dp"
                android:background="#CE474444"
                android:text="@string/app_name1"
                android:textColor="@color/text_color"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/sch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="School Name"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="16dp"
                android:text="Board Examination"
                android:textColor="@color/text_color"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="16dp"
                android:text="Qualification"
                android:textColor="@color/text_color"
                android:textSize="20dp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F3EFE0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Your_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:background="#E7B10A"
                android:textSize="30dp"
                android:paddingLeft="16dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/P_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="professional Title"
                android:paddingLeft="20dp"
                android:background="#E7B10A"
                android:textSize="15dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:paddingLeft="16dp"
                android:text="@string/app_name3"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/A_me"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="@string/app_name4"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Work_h"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:text="@string/app_name5"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Skill_E"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="@string/app_name6"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/My_Hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:text="My Hobby"
                android:textColor="@color/black"
                android:textSize="16dp" />



        </LinearLayout>


    </LinearLayout>
</LinearLayout>